/* 统计0-9中所有数字出现的次数*/

#include <stdio.h>

int main(int argc, char const *argv[])
{
	/* code */
int i,x;
int count[10];

for (i=0;i<10;i++)
{
	count[i]=0;
}

printf ("please input a number:");
scanf("%d",&x);
while(x>=0&&x<=9)
{
	count[i]++;
	scanf("%d",&x);
}

for (i=0;i<10;i++)
{
	printf("%d:%d",i,count[i]);
}
	return 0;
}
